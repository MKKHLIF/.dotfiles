# General Settings
set window-title-basename true
set statusbar-home-tilde true
set selection-clipboard clipboard
set font "JetBrains Mono 10"
set page-padding 1
set show-hidden true
set adjust-open "best-fit"
set pages-per-row 1
set scroll-page-aware true
set scroll-full-overlap 0.01
set scroll-step 50
set guioptions "sv"  # Show status bar and vertical scrollbar

# Navigation
map u scroll half-up
map d scroll half-down
map D toggle_page_mode
map r reload
map R rotate
map K zoom in
map J zoom out
map i recolor
map p print
map g goto top
map G goto bottom

# Search
set incremental-search true
set search-hadjust true

# Gruvbox Dark Theme Colors
set notification-error-bg       "#282828" # bg
set notification-error-fg       "#fb4934" # bright:red
set notification-warning-bg     "#282828" # bg
set notification-warning-fg     "#fabd2f" # bright:yellow
set notification-bg            "#282828" # bg
set notification-fg            "#b8bb26" # bright:green

set completion-bg               "#504945" # bg2
set completion-fg               "#ebdbb2" # fg
set completion-group-bg         "#3c3836" # bg1
set completion-group-fg         "#928374" # gray
set completion-highlight-bg     "#83a598" # bright:blue
set completion-highlight-fg     "#504945" # bg2

# Define bar colors
set statusbar-fg               "#ebdbb2" # fg
set statusbar-bg               "#504945" # bg2

# Define input bar colors
set inputbar-bg                "#282828" # bg
set inputbar-fg                "#ebdbb2" # fg

# Define index colors
set index-bg                   "#504945" # bg2
set index-fg                   "#ebdbb2" # fg
set index-active-bg            "#83a598" # bright:blue
set index-active-fg            "#504945" # bg2

# Define recolor colors (for PDF content)
set recolor-lightcolor         "#282828" # bg (dark background)
set recolor-darkcolor          "#ebdbb2" # fg (light text)

# Enable recoloring by default
set recolor true

# Ensure recoloring doesn't affect images
set recolor-keephue true

# Define default color for document
set default-bg                 "#282828" # bg
set default-fg                 "#ebdbb2" # fg

# Render Setting
set render-loading true
set render-loading-fg          "#282828" # bg
set render-loading-bg          "#ebdbb2" # fg

# Smooth Scroll
set scroll-step 50
set smooth-scroll true